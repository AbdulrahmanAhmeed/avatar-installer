<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Maui.Views"
    Title="Avatar Installer"
    Shell.FlyoutBehavior="Flyout"
    Shell.NavBarIsVisible="False">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:HomePage}"
        Route="HomePage"
        Shell.FlyoutBehavior="Disabled" />
    <ShellContent
        Title="Create Avatar"
        ContentTemplate="{DataTemplate views:CreateAvatarPage}"
        Route="CreateAvatarPage"
        Shell.FlyoutBehavior="Flyout" />
    <ShellContent
        Title="Edit Avatar"
        ContentTemplate="{DataTemplate views:EditAvatarPage}"
        Route="EditAvatarPage"
        Shell.FlyoutBehavior="Flyout" />
</Shell>
