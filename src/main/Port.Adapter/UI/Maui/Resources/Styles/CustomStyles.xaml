<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style x:Key="ButtonStyle" TargetType="Button">
        <Setter Property="WidthRequest" Value="250" />
        <Setter Property="TextColor" Value="#FFFFFF" />
    </Style>

    <Style
        x:Key="SuccessButtonStyle"
        BasedOn="{StaticResource ButtonStyle}"
        TargetType="Button">
        <Setter Property="BackgroundColor" Value="#218838" />
    </Style>

    <Style
        x:Key="SecondaryButtonStyle"
        BasedOn="{StaticResource ButtonStyle}"
        TargetType="Button">
        <Setter Property="BackgroundColor" Value="#5a6268" />
    </Style>

    <Style
        x:Key="DangerButtonStyle"
        BasedOn="{StaticResource ButtonStyle}"
        TargetType="Button">
        <Setter Property="BackgroundColor" Value="#DC3545" />
    </Style>


</ResourceDictionary>
